<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reader"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.strykeforce.qrscannergenerator.ReaderActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Master Scouting App"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <!-- RED 1 CHECK OFF
    //RED 1 CHECK ON-->

    <!-- RED 2 CHECK OFF
    //RED 2 CHECK ON-->


    <TextView
        android:text="Red 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/red3view"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkRed1"
        style="@android:style/Widget.CompoundButton.CheckBox"
        android:duplicateParentState="false"
        android:scaleX="4.00"
        android:scaleY="4.00"
        android:layout_below="@+id/red1view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:clickable="false"
        app:buttonTint="@color/colorAccent"
        android:checked="false" />

    <TextView
        android:text="Red 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/red1view"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_alignBaseline="@+id/red3view"
        android:layout_alignBottom="@+id/red3view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Red 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/red2view"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_alignBaseline="@+id/red1view"
        android:layout_alignBottom="@+id/red1view"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkRed2"
        style="@android:style/Widget.CompoundButton.CheckBox"
        android:checked="false"
        android:duplicateParentState="false"
        android:scaleX="4.00"
        android:scaleY="4.00"
        android:layout_alignBaseline="@+id/checkRed1"
        android:layout_alignBottom="@+id/checkRed1"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        app:buttonTint="@color/colorAccent" />

    <TextView
        android:text="Blue 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:id="@+id/blueView1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_below="@+id/checkRed1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Blue 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blueView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_alignBaseline="@+id/blueView1"
        android:layout_alignBottom="@+id/blueView1"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBlue1"
        android:scaleX="4.00"
        android:scaleY="4.00"
        android:textColorLink="@color/colorPrimary"
        android:layout_below="@+id/blueView1"
        android:layout_alignLeft="@+id/checkRed1"
        android:layout_alignStart="@+id/checkRed1"
        android:layout_marginTop="14dp"
        android:clickable="false"
        android:checked="false"
        app:buttonTint="@color/colorPrimary" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBlue2"
        android:scaleX="4.00"
        android:scaleY="4.00"
        android:clickable="false"
        android:textColorLink="@color/colorPrimary"
        android:layout_alignBaseline="@+id/checkBlue1"
        android:layout_alignBottom="@+id/checkBlue1"
        android:layout_alignLeft="@+id/checkRed2"
        android:layout_alignStart="@+id/checkRed2"
        app:buttonTint="@color/colorPrimary" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkRed3"
        style="@android:style/Widget.CompoundButton.CheckBox"
        android:checked="false"
        android:duplicateParentState="false"
        android:scaleX="4.00"
        android:scaleY="4.00"
        android:clickable="false"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignBaseline="@+id/checkRed2"
        android:layout_alignBottom="@+id/checkRed2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:buttonTint="@color/colorAccent" />

    <TextView
        android:text="Blue 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blueView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_alignBaseline="@+id/blueView2"
        android:layout_alignBottom="@+id/blueView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBlue3"
        android:scaleX="4.00"
        android:scaleY="4.00"
        android:clickable="false"
        android:textColorLink="@color/colorPrimary"
        android:layout_alignBaseline="@+id/checkBlue2"
        android:layout_alignBottom="@+id/checkBlue2"
        android:layout_alignLeft="@+id/checkRed3"
        android:layout_alignStart="@+id/checkRed3"
        android:buttonTint="@color/colorPrimary" />

    <Button
        android:text="NEXT MATCH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/nextMatchButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="RESET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/resetButton"
        android:layout_alignTop="@+id/nextMatchButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "SCAN"
        android:id="@+id/scan_btn"
        android:scaleX="2.00"
        android:scaleY="1.75"
        android:layout_marginTop="77dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/red2view"
        android:layout_alignStart="@+id/red2view" />

    <TextView
        android:text="   STORE                                      SEND"
        android:layout_height="wrap_content"
        android:id="@+id/sendStoreLabel"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="match_parent"
        android:layout_below="@+id/scan_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:scaleX="3.00"
        android:scaleY="3.00"
        app:srcCompat="@android:drawable/stat_sys_download"
        android:id="@+id/storeButton"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/sendButton"
        android:layout_toRightOf="@+id/checkRed1"
        android:layout_toEndOf="@+id/checkRed1"
        android:layout_width="40dp" />

    <ImageButton
        android:id="@+id/sendButton"
        android:layout_height="40dp"
        android:scaleX="3.00"
        android:scaleY="3.00"
        android:src="@android:drawable/ic_menu_send"
        android:layout_weight="0.36"
        android:layout_marginTop="25dp"
        android:layout_width="40dp"
        android:layout_below="@+id/sendStoreLabel"
        android:layout_toLeftOf="@+id/checkRed3"
        android:layout_toStartOf="@+id/checkRed3" />


</RelativeLayout>
